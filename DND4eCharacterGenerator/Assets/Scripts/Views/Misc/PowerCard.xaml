                                    <GradientStop Color="White" Offset="1"/>
                                    <GradientStop Color="#FFD4D3BE" Offset="0.478"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Name="label2" MaxWidth="365" TextWrapping="Wrap" Margin="1" Style="{DynamicResource CollapsableTextblock}">
                            <Run Text="" FontWeight="Bold"/> <Run Text=""/>
                        </TextBlock>
                    </Grid>
                    <Grid>
                        <TextBlock Name="labelmiss" MaxWidth="365" TextWrapping="Wrap" Margin="1" Style="{DynamicResource CollapsableTextblock}">
                            <Run Text="" FontWeight="Bold"/> <Run Text=""/>
                        </TextBlock>
                    </Grid>
                    <Grid>
                        <Rectangle>
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                    <LinearGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                            <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                            <RotateTransform Angle="270" CenterY="0.5" CenterX="0.5"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.RelativeTransform>
                                    <GradientStop Color="White" Offset="1"/>
                                    <GradientStop Color="#FFD4D3BE" Offset="0.555"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Name="labeleffect" MaxWidth="365" TextWrapping="Wrap" Margin="1" Style="{DynamicResource CollapsableTextblock}">
                            <Run Text="Effect:" FontWeight="Bold"/> <Run Text="{Binding power.EffectDescription}"/>
                        </TextBlock>
                    </Grid>
                    <Grid>
                        <TextBlock Name="labelaugment" MaxWidth="365" TextWrapping="Wrap" Margin="1" Style="{DynamicResource CollapsableTextblock}">
                            <Run Text="" FontWeight="Bold"/> <Run Text="" FontWeight="Bold"/>
                        </TextBlock>
                    </Grid>
                    <Grid>
                        <Rectangle>
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                    <LinearGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                            <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                            <RotateTransform Angle="270" CenterY="0.5" CenterX="0.5"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </LinearGradientBrush.RelativeTransform>
                                    <GradientStop Color="White" Offset="1"/>
                                    <GradientStop Color="#FFD4D3BE" Offset="0.498"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Name="labeleffect2" MaxWidth="365" TextWrapping="Wrap" Margin="1" Style="{DynamicResource CollapsableTextblock}">
                            <Run Text="" FontWeight="Bold"/> <Run Text=""/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Viewbox>
