                        <!--<Run Text="Hit:" FontWeight="Bold"/> <Run Text="3[W] + Con modifier"/> (<Run Text="10"/>) <Run Text="damage."/>-->
                        </TextBlock>
                    </Grid>
                    <Grid>
                        <TextBlock Name="label1" MaxWidth="365" TextWrapping="Wrap" Margin="1" Style="{DynamicResource CollapsableTextblock}">
                            <Run Text="" FontWeight="Bold"/> <Run Text=""/>
                        </TextBlock>
                    </Grid>
                    <Grid>
                        <Rectangle >
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
