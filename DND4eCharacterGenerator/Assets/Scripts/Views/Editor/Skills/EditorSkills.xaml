<UserControl x:Class="DnD4e.Assets.Scripts.Views.Editor.Skills.EditorSkills"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnD4e.Assets.Scripts.Views.Editor.Skills"
             mc:Ignorable="d" 
             d:DesignHeight="666" d:DesignWidth="435">
    <Grid>
        <Label Content="Choose Trained Skills" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock Margin="0,15,9,0" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Run Text="Trained Skills: "/> <Run Name="CTrained" Text="0"/> <Run Name="TTrained" Text=" / 4"/>
        </TextBlock>

        <Viewbox VerticalAlignment="Top" Height="459" Margin="20,53,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="22"/>   
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="25"/>
                </Grid.ColumnDefinitions>

                <!--#region Headers-->
                <Label Grid.Row="0" Grid.Column="0" Content="Training" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="8" Margin="-15,0,0,0" />
                <Label Grid.Row="0" Grid.Column="1" Content="Bonus" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="8" Margin="-2,0,0,0" />
                <Label Grid.Row="0" Grid.Column="2" Content="Skill Name" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="8" Margin="5,0,0,0" />
                <Label Grid.Row="0" Grid.Column="3" Content="Ability" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="8" Margin="0" />
                <Label Grid.Row="0" Grid.Column="5" Content="Mod + 1/2" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="8" Margin="-15,0,0,0" Grid.ColumnSpan="2" />
                <Label Grid.Row="0" Grid.Column="7" Content="Trained" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="8" Grid.ColumnSpan="2"/>
                <Label Grid.Row="0" Grid.Column="9" Content="Penalty" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="8" Grid.ColumnSpan="2"/>
                <Label Grid.Row="0" Grid.Column="11" Content="Misc" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="8"/>
                
                <!--#endregion-->         

                <!--#region Racial Selections-->
                <CheckBox Name="checkboxAcrobatics" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.AcrobaticsTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5" Tag=""/>
                <CheckBox Name="checkboxArcana" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.ArcanaTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxAthletics" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.AthleticsTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxBluff" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.BluffTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxDiplomacy" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.DiplomacyTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxDungeoneering" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.DungeoneeringTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxEndurance" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.EnduranceTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxHeal" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.HealTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxHistory" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.HistoryTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxInsight" Grid.Row="10" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.InsightTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxIntimidate" Grid.Row="11" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.IntimidateTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxNature" Grid.Row="12" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.NatureTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxPerception" Grid.Row="13" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.PerceptionTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxReligion" Grid.Row="14" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.ReligionTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxStealth" Grid.Row="15" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.StealthTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxStreetwise" Grid.Row="16" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.StreetwiseTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <CheckBox Name="checkboxThievery" Grid.Row="17" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="checkbox_Checked" IsChecked="{Binding character.ThieveryTraining}" Unchecked="checkbox_Unchecked" IsHitTestVisible="False" Focusable="False" Opacity="0.5"/>
                <!--#endregion-->
                
                <!--#region Ability Descriptions-->
                <Rectangle Name="rectangleAcrobatics" Fill="LightGray" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0"/>
                <Rectangle Name="rectangleArcana" Fill="LightGray" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleAthletics" Fill="LightGray" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleBluff" Fill="LightGray" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleDiplomacy" Fill="LightGray" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleDungeoneering" Fill="LightGray" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleEndurance" Fill="LightGray" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0"/>
                <Rectangle Name="rectangleHeal" Fill="LightGray" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleHistory" Fill="LightGray" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleInsight" Fill="LightGray" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleIntimidate" Fill="LightGray" Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleNature" Fill="LightGray" Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectanglePerception" Fill="LightGray" Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0"/>
                <Rectangle Name="rectangleReligion" Fill="LightGray" Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleStealth" Fill="LightGray" Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleStreetwise" Fill="LightGray" Grid.Row="16" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1.5,0,0" />
                <Rectangle Name="rectangleThievery" Fill="LightGray" Grid.Row="17" Grid.Column="1" Grid.ColumnSpan="11" Height="19" VerticalAlignment="Top" Margin="0,1,0,0" />                
                <!--#endregion-->

                <!--#region Ability Scores-->
                <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.AcrobaticsBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.ArcanaBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.AthleticsBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.BluffBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.DiplomacyBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.DungeoneeringBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.EnduranceBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.HealBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.HistoryBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="10" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.InsightBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="11" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.IntimidateBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="12" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.NatureBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="13" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.PerceptionBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="14" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.ReligionBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="15" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.StealthBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="16" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.StreetwiseBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <TextBox Grid.Row="17" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding character.ThieveryBonus}" Width="18" HorizontalContentAlignment="Center" Height="16" Focusable="False"/>
                <!--#endregion-->

                <!--#region Ability Descriptions-->
                <Label Content="{Binding abilities.SubList[1]}" Foreground="White" Grid.Row="1" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[0]}" Foreground="White" Grid.Row="1" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <Label Content="{Binding abilities.SubList[5]}" Foreground="White" Grid.Row="2" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[1]}" Foreground="White" Grid.Row="2" Grid.Column="2" FontSize="8"  VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left"  />
                <Label Content="{Binding abilities.SubList[3]}" Foreground="White" Grid.Row="3" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[2]}" Foreground="White" Grid.Row="3" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <Label Content="{Binding abilities.SubList[2]}" Foreground="White" Grid.Row="4" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[3]}" Foreground="White" Grid.Row="4" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left"  />
                <Label Content="{Binding abilities.SubList[2]}" Foreground="White" Grid.Row="5" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[4]}" Foreground="White" Grid.Row="5" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <Label Content="{Binding abilities.SubList[4]}" Foreground="White" Grid.Row="6" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Label Content="{Binding skills.MainList[5]}" Foreground="White" Grid.Row="6" Grid.Column="2" FontSize="8"  VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <Label Content="{Binding abilities.SubList[0]}" Foreground="White" Grid.Row="7" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[6]}" Foreground="White" Grid.Row="7" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <Label Content="{Binding abilities.SubList[4]}" Foreground="White" Grid.Row="8" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[7]}" Foreground="White" Grid.Row="8" Grid.Column="2" FontSize="8"  VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left"  />
                <Label Content="{Binding abilities.SubList[5]}" Foreground="White" Grid.Row="9" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[8]}" Foreground="White" Grid.Row="9" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <Label Content="{Binding abilities.SubList[4]}" Foreground="White" Grid.Row="10" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[9]}" Foreground="White" Grid.Row="10" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left"  />
                <Label Content="{Binding abilities.SubList[2]}" Foreground="White" Grid.Row="11" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[10]}" Foreground="White" Grid.Row="11" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <Label Content="{Binding abilities.SubList[4]}" Foreground="White" Grid.Row="12" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Label Content="{Binding skills.MainList[11]}" Foreground="White" Grid.Row="12" Grid.Column="2" FontSize="8"  VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <Label Content="{Binding abilities.SubList[4]}" Foreground="White" Grid.Row="13" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[12]}" Foreground="White" Grid.Row="13" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <Label Content="{Binding abilities.SubList[5]}" Foreground="White" Grid.Row="14" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[13]}" Foreground="White" Grid.Row="14" Grid.Column="2" FontSize="8"  VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left"  />
                <Label Content="{Binding abilities.SubList[1]}" Foreground="White" Grid.Row="15" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[14]}" Foreground="White" Grid.Row="15" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <Label Content="{Binding abilities.SubList[2]}" Foreground="White" Grid.Row="16" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[15]}" Foreground="White" Grid.Row="16" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left"  />
                <Label Content="{Binding abilities.SubList[1]}" Foreground="White" Grid.Row="17" Grid.Column="3" FontWeight="Bold" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="{Binding skills.MainList[16]}" Foreground="White" Grid.Row="17" Grid.Column="2" FontSize="8" VerticalAlignment="Center" Margin="2,0,0,0" Padding="0" HorizontalAlignment="Left" />
                <!--#endregion-->

                <!--#region Ability Mods-->
                <TextBox Name="AcrobaticsMod" Grid.Row="1" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.DexterityMod}" Focusable="False"/>
                <TextBox Name="ArcanaMod" Grid.Row="2" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.IntelligenceMod}" Focusable="False"/>
                <TextBox Name="AthleticsMod" Grid.Row="3" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.StrengthMod}" Focusable="False"/>
                <TextBox Name="BluffMod" Grid.Row="4" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.CharismaMod}" Focusable="False"/>
                <TextBox Name="DiplomacyMod" Grid.Row="5" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.CharismaMod}" Focusable="False"/>
                <TextBox Name="DungeoneeringMod" Grid.Row="6" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.WisdomMod}" Focusable="False"/>
                <TextBox Name="EnduranceMod" Grid.Row="7" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.ConstitutionMod}" Focusable="False"/>
                <TextBox Name="HealMod" Grid.Row="8" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.WisdomMod}" Focusable="False"/>
                <TextBox Name="HistoryMod" Grid.Row="9" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.IntelligenceMod}" Focusable="False"/>
                <TextBox Name="InsightMod" Grid.Row="10" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.WisdomMod}" Focusable="False"/>
                <TextBox Name="IntimidateMod" Grid.Row="11" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.CharismaMod}" Focusable="False"/>
                <TextBox Name="NatureMod" Grid.Row="12" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.WisdomMod}" Focusable="False"/>
                <TextBox Name="PerceptionMod" Grid.Row="13" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.WisdomMod}" Focusable="False"/>
                <TextBox Name="ReligionMod" Grid.Row="14" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.IntelligenceMod}" Focusable="False"/>
                <TextBox Name="StealthMod" Grid.Row="15" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.DexterityMod}" Focusable="False"/>
                <TextBox Name="StreetwiseMod" Grid.Row="16" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.CharismaMod}" Focusable="False"/>
                <TextBox Name="ThieveryMod" Grid.Row="17" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Text="{Binding character.DexterityMod}" Focusable="False"/>
                <!--#endregion-->

                <!--#region Ability Mods + 1/2 level-->
                <TextBox Name="AcrobaticsTrain" Grid.Row="1" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Focusable="False">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Text" Value="0" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding character.AcrobaticsTraining}" Value="True">
                                    <Setter Property="Text" Value="5"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBox Name="ArcanaTrain" Grid.Row="2" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Focusable="False">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Text" Value="0" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding character.ArcanaTraining}" Value="True">
                                    <Setter Property="Text" Value="5"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBox Name="AthleticsTrain" Grid.Row="3" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" Width="18" Height="16" HorizontalContentAlignment="Center" Focusable="False">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
