<Page x:Class="DnD4e.CharacterBuilder.Editor.View.Class.SelectionDetailsRole"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnD4e.CharacterBuilder.Editor.View.Class"
      mc:Ignorable="d" 
      d:DesignWidth="281"
      Title="SelectionDetails">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelTile" Content="Test" FontSize="18" FontWeight="Bold" Padding="5,0,5,0" Grid.Row="0"/>
        <Rectangle Stroke="#FF9B8D4D" Height="1" VerticalAlignment="Bottom" Grid.Row="0"/>
        <TextBlock x:Name="textBlockDetails" FontSize="14" TextWrapping="WrapWithOverflow" Margin="0,2,0,0" Grid.Row="1"/>
        <Image Name="image" Grid.Row="2"/>
    </Grid>
</Page>
