<Page x:Class="DnD4e.Assets.Scripts.Views.Editor.Power.SelectionDetailsPower"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnD4e.Assets.Scripts.Views.Editor.Power"
      mc:Ignorable="d" 
      d:DesignWidth="281"
      Title="SelectionDetailsClass">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="labelPower" Content="{Binding Power}" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold"/>
        <StackPanel Name="stackpanelPowers" Grid.Row="2" Margin="0,5,0,0">
        </StackPanel>
        <TextBlock Grid.Row="7" TextWrapping="Wrap">
            <Bold> <Run Text="Source:"/> </Bold>
            <LineBreak/>
            <Run Name="textSource" Text="{}"/>
        </TextBlock>
    </Grid>
</Page>
